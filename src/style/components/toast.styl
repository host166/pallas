.toast {
    position fixed
    z-index 99999999999999
}
.toast-top {
    top 5%
    left 50%
    transform translateX(-50%)
}
.toast-right {
    top 5%
    right 2%
}
.toast-bottom {
    bottom 5%
    left 50%
    transform translateX(-50%)
}
.toast-left {
    top 5%
    left 2%
}
.toast-content {
    padding 1rem 2rem
    margin 1rem 0
    border-radius 2%
    transform translate3d(0, 3rem, 0)
    transition all 0.3s cubic-bezier(0, 0, .2, 1)
    color #fff
    background #333
    opacity 0
}
.toast-content-active {
    transform translate3d(0, 0, 0)
    opacity 0.7
}
.toast-content-hide {
    margin-top -3rem
    opacity 0
}
