
.tag {
    background #2196f3
    border 0.0625rem solid #2196f3
    border-radius 2rem
    display inline-flex
    align-items center
    justify-content space-between
    font-size 0.8rem
    padding 0 0.8rem
    min-height 25px
}
.tag-rect {
    border-radius 0
}
.tag-outline {
    background transparent !important
    color #2196f3
}
.tag-small {
    min-height 20px
    padding 0 0.4rem
    font-size 0.4rem
}
.tag-small-x {
    min-height 10px
    padding 0 0.15rem
    font-size 0.2rem
}
.tag-close {
    color inherit
    display flex
    align-items center
    text-decoration none
}
.icon {
    color inherit
    font-size 2rem
}
.icon-left {
    margin-left -.4rem
    margin-right 1rem
}
.icon-right {
    margin-left 1rem
    margin-right -.4rem
}
