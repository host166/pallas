a {
    color: #333;
}
.multi {
    display inline-block
    width 100%
}
.multi-title {
    margin-left 0.2rem
    line-height 1.76rem
    height 1.76rem
}
.multi-items {

}
.multi-items > ul {
    margin 0
    padding 0
}
.multi-items > ul > li{
    position relative
    float left
    box-sizing border-box
    width 25%
    margin-bottom 0.4rem
    padding-right 0.2rem
    padding-left 0.2rem
    text-align center
}
.multi-items > ul > li > a {
    position relative
    display block
    height 1.56rem
    line-height 1.4rem
    white-space nowrap
    text-overflow ellipsis
    border 1px solid #e1e1e1
}
.multi-items > ul > li > a > span {
    height 1.04rem
    line-height 1.04rem
    font-size .76rem
}
.multi-items > ul > li.active > a{
    border 1px solid #f24
}
.multi-items > ul > li.active > a > span{
    color #ff2244
}
